{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "application_schema",
    "title": "Thesis Application Schema",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "thesisProposalId": {
            "type": "integer"
        },
        "studentId": {
            "type": "string",
            "pattern": "^(s|S)[0-9]{6}$"
        },
        "message": {
            "type": "string",
            "maxLength": 1000
        },
        "date": {
            "type": "string",
            "format": "date"
        },
        "cv": {
            "type": "string",
            "format": "uri"
        },
        "isReadedByProfessor": {
            "type": "boolean",
            "default": false
        },
        "isReadedByStudent": {
            "type": "boolean",
            "default": false
        },
        "isAccepted": {
            "enum": [
                "Rejected",
                "Pending",
                "Accepted"
            ],
            "default": "Pending"
        }
    },
    "additionalProperties": false,
    "required": [
        "thesisProposalId"
    ]
}