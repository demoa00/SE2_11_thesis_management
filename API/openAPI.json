{
    "openapi": "3.0.3",
    "info": {
        "title": "Thesis Proposal",
        "version": "1.0.11"
    },
    "components": {
        "schemas": {
            "professor": {
                "type": "object",
                "properties": {
                    "professorId": {
                        "type": "string",
                        "pattern": "^(p|P)[0-9]{6}$"
                    },
                    "name": {
                        "type": "string",
                        "pattern": "^[a-zA-Z ]+$",
                        "minLength": 1
                    },
                    "surname": {
                        "type": "string",
                        "pattern": "^[a-zA-Z ]+$",
                        "minLength": 1
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "pattern": "^[a-z]+\\.[a-z]+@polito\\.it$"
                    },
                    "codGroup": {
                        "type": "string",
                        "pattern": "^CG_[0-9]{2}$"
                    },
                    "codDepartment": {
                        "type": "string",
                        "pattern": "^CD_[0-9]{2}$"
                    },
                    "password": {
                        "type": "string"
                    },
                    "salt": {
                        "type": "string"
                    }
                },
                "minProperties": 8,
                "maxProperties": 8,
                "required": [
                    "name",
                    "surname",
                    "email",
                    "codGroup",
                    "codDepartment"
                ]
            },
            "student": {
                "type": "object",
                "properties": {
                    "studentId": {
                        "type": "string",
                        "pattern": "^(s|S)[0-9]{6}$"
                    },
                    "name": {
                        "type": "string",
                        "pattern": "^[a-zA-Z ]+$",
                        "minLength": 1
                    },
                    "surname": {
                        "type": "string",
                        "pattern": "^[a-zA-Z ]+$",
                        "minLength": 1
                    },
                    "gender": {
                        "enum": [
                            "male",
                            "female",
                            "other"
                        ]
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "pattern": "^(s|S)[0-9]{6}@studenti\\.polito\\.it$"
                    },
                    "codDegree": {
                        "type": "string",
                        "pattern": "^LM?-([1-9]|[1-9][0-9])$"
                    },
                    "nationality": {
                        "type": "string",
                        "pattern": "^[a-zA-Z ]+$",
                        "minLength": 1
                    },
                    "enrollmentYear": {
                        "type": "integer"
                    },
                    "password": {
                        "type": "string"
                    },
                    "salt": {
                        "type": "string"
                    }
                },
                "minProperties": 10,
                "maxProperties": 10,
                "required": [
                    "name",
                    "surname",
                    "gender",
                    "nationality",
                    "email",
                    "codDegree",
                    "enrollmentYear"
                ]
            },
            "application": {
                "type": "object",
                "properties": {
                    "thesisProposalId": {
                        "type": "integer"
                    },
                    "studentId": {
                        "type": "string",
                        "pattern": "^(s|S)[0-9]{6}$"
                    },
                    "message": {
                        "type": "string",
                        "maxLength": 1000
                    },
                    "date": {
                        "type": "string",
                        "format": "date"
                    },
                    "cv": {
                        "type": "string",
                        "format": "uri"
                    },
                    "isReaded": {
                        "type": "boolean",
                        "default": false
                    },
                    "isAccepted": {
                        "type": "boolean"
                    }
                },
                "minProperties": 2,
                "required": [
                    "thesisProposalId",
                    "studentId"
                ]
            },
            "thesisProposal": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "minimum": 1
                    },
                    "title": {
                        "type": "string",
                        "minLength": 1
                    },
                    "supervisor": {
                        "type": "string",
                        "pattern": "^(p|P)[0-9]{6}$"
                    },
                    "coSupervisor": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "pattern": "^((p|P)|(e|E))[0-9]{6}$"
                        }
                    },
                    "keywords": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "minItems": 1
                    },
                    "thesisType": {
                        "type": "object",
                        "properties": {
                            "inCompany": {
                                "type": "boolean"
                            },
                            "abroad": {
                                "type": "boolean"
                            }
                        }
                    },
                    "groups": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "minLength": 1
                        },
                        "minItems": 1,
                        "uniqueItems": true
                    },
                    "description": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 1000
                    },
                    "requirements": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 1000
                    },
                    "notes": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 1000
                    },
                    "expirationDate": {
                        "type": "string",
                        "format": "date"
                    },
                    "level": {
                        "enum": [
                            "BSc",
                            "MSc"
                        ]
                    },
                    "CdS": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "minLength": 1
                        },
                        "minItems": 1
                    },
                    "isArchieved": {
                        "type": "boolean",
                        "default": false
                    }
                },
                "minProperties": 11,
                "maxProperties": 14,
                "required": [
                    "title",
                    "keywords",
                    "thesisType",
                    "description",
                    "requirements",
                    "expirationDate",
                    "level",
                    "CdS"
                ]
            }
        }
    },
    "paths": {
        "/professors/{professorId}": {
            "get": {
                "parameters": [
                    {
                        "name": "professorId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/professor"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/professors/{professorId}/thesisProposal": {
            "post": {
                "parameters": [
                    {
                        "name": "professorId",
                        "in": "cookie",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/thesisProposal"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/thesisProposal"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/student/{studentId}": {
            "get": {
                "parameters": [
                    {
                        "name": "studentId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/student"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/student/{studentId}/applications": {
            "post": {
                "parameters": [
                    {
                        "name": "studentId",
                        "in": "cookie",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/application"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/application"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/thesisProposal": {
            "get": {
                "parameters": [
                    {
                        "name": "codDegree",
                        "in": "cookie",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "keywords",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    {
                        "name": "supervisor",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "title",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "inCompany",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "abroad",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "expirationDate",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/thesisProposal"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        }
    }
}