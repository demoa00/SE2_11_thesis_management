{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Thesis Proposal Schema",
    "definitions": {
        "thesisProposal": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "minimum": 1
                },
                "title": {
                    "type": "string",
                    "minLength": 1
                },
                "supervisor": {
                    "type": "string",
                    "pattern": "^(p|P)[0-9]{6}$"
                },
                "coSupervisor": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "pattern": "^((p|P)|(e|E))[0-9]{6}$"
                    },
                    "uniqueness": true
                },
                "keywords": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "uniqueness": true
                },
                "thesisType": {
                    "type": "string",
                    "minLength": 1
                },
                "groups": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "minLength": 1
                    },
                    "minItems": 1,
                    "uniqueItems": true
                },
                "description": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 1000
                },
                "requirements": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 1000
                },
                "notes": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 1000
                },
                "expirationDate": {
                    "type": "string",
                    "format": "date"
                },
                "level": {
                    "enum": [
                        "BSc",
                        "MSc"
                    ]
                },
                "CdS": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "minLength": 1
                    },
                    "minItems": 1
                }
            },
            "minProperties": 11,
            "maxProperties": 13,
            "required": [
                "id",
                "title",
                "supervisor",
                "keywords",
                "thesisType",
                "groups",
                "description",
                "requirements",
                "expirationDate",
                "level",
                "CdS"
            ]
        }
    },
    "type": "object",
    "properties": {
        "thesisProposal": {
            "$ref": "#/definitions/thesisProposal"
        }
    }
}