{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Authenticated User Schema",
    "definitions": {
        "authenticatedUser": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "format": "email",
                    "pattern": "^([a-z]+\\.[a-z]+@)|((s|S)[0-9]{6}@studenti\\.)polito\\.it$"
                },
                "salt": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "isProfessor": {
                    "type": "boolean"
                }
            },
            "required": [
                "email",
                "salt",
                "password",
                "isProfessor"
            ]
        }
    },
    "type": "object",
    "properties": {
        "authenticatedUser": {
            "$ref": "#/definitions/authenticatedUser"
        }
    }
}