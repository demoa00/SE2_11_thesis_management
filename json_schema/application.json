{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "application_schema",
    "title": "Thesis Application Schema",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "thesisProposalId": {
            "type": "integer"
        },
        "thesisProposalTitle":{
            "type": "string",
            "minLength": 1
        },
        "applicant": {
            "type": "object",
            "properties": {
                "studentId": {
                    "type": "string",
                    "pattern": "^(s|S)[0-9]{6}$"
                },
                "name": {
                    "type": "string",
                    "minLength": 1
                },
                "surname": {
                    "type": "string",
                    "minLength": 1
                },
                "student": {
                    "type": "string",
                    "format": "uri"
                }
            },
            "additionalProperties": false,
            "required": [
                "studentId"
            ]
        },
        "message": {
            "type": "string",
            "maxLength": 1000
        },
        "date": {
            "type": "string",
            "format": "date"
        },
        "isReadedByProfessor": {
            "type": "boolean",
            "default": false
        },
        "isReadedByStudent": {
            "type": "boolean",
            "default": false
        },
        "status": {
            "enum": [
                "Rejected",
                "Pending",
                "Accepted"
            ],
            "default": "Pending"
        }
    },
    "additionalProperties": false,
    "required": [
        "thesisProposalId",
        "status"
    ]
}