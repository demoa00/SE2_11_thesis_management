{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "student_schema",
    "title": "Student Schema",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "studentId": {
            "type": "string",
            "pattern": "^(s|S)[0-9]{6}$"
        },
        "name": {
            "type": "string",
            "pattern": "^[a-zA-Z ]+$",
            "minLength": 1
        },
        "surname": {
            "type": "string",
            "pattern": "^[a-zA-Z ]+$",
            "minLength": 1
        },
        "gender": {
            "enum": [
                "male",
                "female",
                "other"
            ]
        },
        "email": {
            "type": "string",
            "format": "email",
            "pattern": "^(s|S)[0-9]{6}@studenti\\.polito\\.it$"
        },
        "codDegree": {
            "type": "string",
            "pattern": "^LM?-([1-9]|[1-9][0-9])$"
        },
        "nationality": {
            "type": "string",
            "pattern": "^[a-zA-Z ]+$",
            "minLength": 1
        },
        "enrollmentYear": {
            "type": "integer"
        },
        "cv": {
            "type": "string",
            "format": "uri"
        }
    },
    "additionalProperties": false,
    "required": [
        "studentId",
        "name",
        "surname",
        "gender",
        "nationality",
        "email",
        "codDegree",
        "enrollmentYear"
    ]
}